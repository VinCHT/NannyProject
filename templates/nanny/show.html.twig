{% extends 'base.html.twig' %}

{% block title nanny.title %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    {% if nanny.filename %}
                        <img src="{{ vich_uploader_asset(nanny, 'imageFile') | imagine_filter('medium') }}" alt="card-img-top" style="width: 100%; height:auto;">
                    {% else %}
                        <img src="{{ '/images/nannies/empty.jpg' | imagine_filter('medium') }}" alt="card-img-top" style="width: 100%; height:auto;">
                    {% endif %}
                </div>
                <div class="col-md-4">
                    <h1>{{ nanny.title }}</h1>
                    <div id="price-profil">{{ nanny.formattedPrice }} €</div>
                    <a href="#" id="contact-nanny" class="btn btn-primary">Contacter la nourrice</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">

        <p>
            {{ nanny.description | nl2br }}
        </p>

        <div class="row">
            <div class="col-md-8">
                <h2>Caractéristiques</h2>
                <table class="table table-striped">
                    <tr>
                        <td>Ancienneté</td>
                        <td>{{ nanny.experience }} an(s)</td>
                    </tr>
                    <tr>
                        <td>Etat Civil</td>
                        <td>{{ nanny.statutType }} </td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
                <h2>Spécificités</h2>
                <ul class="list-group">
                    {% for option in nanny.options %}
                        <li class="list-group-item">{{ option.name }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

